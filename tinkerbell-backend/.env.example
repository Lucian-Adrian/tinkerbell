# =============================================================================
# TINKERBELL ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# =============================================================================
# REQUIRED - CORE AI FUNCTIONALITY
# =============================================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# Required for AI persona generation and campaign creation
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# =============================================================================
# OPTIONAL - SOCIAL MEDIA INTEGRATIONS
# =============================================================================

# Facebook Integration (Optional)
# Get tokens from: https://developers.facebook.com/
# Required only if you want direct Facebook posting
FACEBOOK_ACCESS_TOKEN=your-facebook-page-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id
AUTO_POST_ENABLED=true

# =============================================================================
# OPTIONAL - WORKFLOW INTEGRATIONS
# =============================================================================

# Planable Integration (Optional)
# Get API key from: https://planable.io/
# Required only if you want Planable workflow integration
PLANABLE_ACCESS_TOKEN=your_planable_token_here
PLANABLE_BASE_URL=https://api.planable.io/v1

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=3000
NODE_ENV=development

# Image Configuration
MAX_UPLOAD_SIZE=10MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
GENERATE_IMAGES=true

# =============================================================================
# OPTIONAL - ADVANCED FEATURES
# =============================================================================

# CORS Configuration (for production)
# CORS_ORIGIN=https://yourdomain.com

# Rate Limiting (requests per minute)
# RATE_LIMIT=100

# Session Configuration
# SESSION_SECRET=your-secure-random-string-here

# Debug Mode (shows detailed logs)
# DEBUG=tinkerbell:*

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. Never share your .env file or commit it to version control
# 2. Use strong, unique API keys for production
# 3. Regularly rotate your API keys
# 4. Set up billing alerts for OpenAI usage
# 5. Use environment-specific configurations for dev/staging/prod
#
# =============================================================================
PORT=3000
NODE_ENV=development

# Application Settings
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:8080
